          //when: la luce è intensa ed è sera/notte 
          "when": [{  
            "action_domain": "light",
            "action_state": "on",
            "action_attribute": "high",
            "sensors": [
              {
                "sensor": "sensor.time",
                "sensor_state": "night"
              }
            ]
          }]
        },
