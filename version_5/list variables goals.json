          //when: la luce è bassa e stai lavorando
          "when": [{ 
            "action_domain": "light",
            "action_state": "on",
            "action_attribute": "low",
            "sensors": [
              {
                "sensor": "binary_sensor.workday_sensor",
                "sensor_state": "workdays"
              },
              {
                "sensor": "motion",
                "sensor_state": "on",
                "same_environment": true
              }
            ]
          }]
        },
        {
          "goal": "safety",
          "description": "Una luminosità insufficiente può aumentare il rischio di cadute e incidenti, poiché gli ostacoli e i pericoli non sono facilmente visibili",
